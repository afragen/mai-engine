{
  "breakpoint": 1200,
  "colors": {
    "primary": "#007bff",
    "secondary": "#6c757d",
    "tertiary": "#fd7e14",
    "success": "#28a745",
    "danger": "#dc3545",
    "warning": "#ffc107",
    "info": "#42a2b8",
    "darkest": "#2e3338",
    "darker": "#5c6570",
    "dark": "#8f98a3",
    "medium": "#c7ccd1",
    "light": "#e3e6e8",
    "lighter": "#f1f2f4",
    "lightest": "#ffffff"
  },
  "border": {
    "width": "1px",
    "style": "solid",
    "color": "var(--color-medium)",
    "radius": "4px"
  },
  "button": {
    "overlay-brightness": "100%",
    "background-color": "var(--color-primary)",
    "background": "linear-gradient(var(--button-overlay-color), var(--button-overlay-color)), linear-gradient(var(--button-background), var(--button-background))",
    "color": "var(--color-lightest)",
    "border": "0",
    "border-radius": "var(--border-radius)"
  },
  "input": {
    "border-radius": "var(--border-radius)"
  }
}
